#!/bin/sh

### BEGIN INIT INFO
# Provides:          esme-gpio26-toggle
# Required-Start:    $remote_fs $time
# Required-Stop:     $remote_fs $time
# Default-Start:     3 4 5
# Default-Stop:      0 1 2 6
# Short-Description: ESME GPIO#26 toggle service
### END INIT INFO

DAEMON="/usr/bin/esme-gpio-toggle"
DAEMON_OPTS="--gpio 26"
NAME="esme-gpio26-toggle"
PIDFILE="/var/run/$NAME.pid"

case "$1" in
    start)
        echo "Starting $NAME..."
        start-stop-daemon --start --background --make-pidfile --pidfile "$PIDFILE" \
            --exec "$DAEMON" -- $DAEMON_OPTS || {
            echo "Failed to start $NAME."
            exit 1
        }
        echo "$NAME started."
        ;;

    stop)
        echo "Stopping $NAME..."
        start-stop-daemon --stop --pidfile "$PIDFILE" || {
            echo "$NAME is not running."
            exit 1
        }
        rm -f "$PIDFILE"
        echo "$NAME stopped."
        ;;

    restart)
        echo "Restarting $NAME..."
        "$0" stop
        "$0" start
        ;;

    status)
        if [ -f "$PIDFILE" ] && kill -0 $(cat "$PIDFILE") 2>/dev/null; then
            echo "Status of $NAME: running with PID=$(cat "$PIDFILE")"
        else
            echo "Status of $NAME: stopped"
        fi
        ;;

    *)
        echo "Usage: $0 (start | stop | restart | status)"
        exit 1
        ;;
esac

exit 0
